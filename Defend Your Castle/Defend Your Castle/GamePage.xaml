<SwapChainBackgroundPanel
    x:Class="Defend_Your_Castle.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Defend_Your_Castle"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="SwapChainBackgroundPanel_Loaded" UseLayoutRounding="True">

    <SwapChainBackgroundPanel.Resources>
        <!-- Weapon Styles -->
        <Style x:Key="HUD_WeaponButtonStyle" BasedOn="{StaticResource RoundedButtonStyle}" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <!-- Health Bar Styles -->
        <Style x:Key="HUD_OuterHPBarStyle" TargetType="Border">
            <Setter Property="Width" Value="442"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        
        <Style x:Key="HUD_InnerHPBarStyle" TargetType="Border">
            <Setter Property="Width" Value="440"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Gold Styles -->
        <Style x:Key="HUD_GoldImageStyle" TargetType="Image">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Source" Value="Content/Graphics/ShopIcons/ShopIcon.png"/>
        </Style>
        
        <Style x:Key="HUD_GoldAmountStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        
        <!-- Pause Button Styles -->
        <Style x:Key="HUD_PauseButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Background" Value="Orange"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Padding" Value="8,4,8,4"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
        
        
        <!-- Pause Menu Styles -->
        <Style x:Key="PauseMenuStyle" TargetType="Border">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        
        <Style x:Key="PauseMenu_ButtonStyle" TargetType="Button">
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
        
        <!-- Shop Styles -->
        <Style x:Key="Shop_ShopTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="64"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <Style x:Key="Shop_ShopSubtitleStyle" BasedOn="{StaticResource Shop_ShopTitleStyle}" TargetType="TextBlock">
            <Setter Property="FontSize" Value="56"/>
        </Style>
        
        <Style x:Key="Shop_ShopSectionStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        
        <Style x:Key="Shop_ShopItemsListButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="Blue"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
        
        <Style x:Key="Shop_ShopItemsListImageStyle" TargetType="Image">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
        </Style>
        
        <Style x:Key="Shop_ShopItemsListStyle" TargetType="GridView">
            <Setter Property="Grid.Row" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="SelectionMode" Value="None"/>
            <Setter Property="CanDragItems" Value="False"/>
            <Setter Property="CanReorderItems" Value="False"/>
            <Setter Property="IsSwipeEnabled" Value="False"/>
            <Setter Property="IsItemClickEnabled" Value="False"/>
            <Setter Property="IsHoldingEnabled" Value="False"/>
            <Setter Property="IsRightTapEnabled" Value="False"/>
            <Setter Property="IsDoubleTapEnabled" Value="False"/>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Button Style="{StaticResource Shop_ShopItemsListButtonStyle}" Click="ShopItem_Click">
                            <Image Style="{StaticResource Shop_ShopItemsListImageStyle}" Source="{Binding Path=ImagePath}" />
                        </Button>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </SwapChainBackgroundPanel.Resources>

    <Canvas Name="CurrentScreen" x:FieldModifier="public">
        
    </Canvas>
    
    <Grid Name="GameHUD" x:FieldModifier="public" Margin="20" Visibility="Collapsed">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Name="HUD_TopRow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Top">
                <Button Name="HUD_WeaponSword" Style="{StaticResource HUD_WeaponButtonStyle}" Tag="0" Click="ChangeWeaponButton" />
                <Button Name="HUD_WeaponMace" Style="{StaticResource HUD_WeaponButtonStyle}" Margin="30,0,30,0" />
                <Button Name="HUD_WeaponWarhammer" Style="{StaticResource HUD_WeaponButtonStyle}" Tag="1" Click="ChangeWeaponButton" />
            </StackPanel>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Name="HUD_OuterHPBar" Style="{StaticResource HUD_OuterHPBarStyle}">
                    <Border Name="HUD_InnerHPBar" Style="{StaticResource HUD_InnerHPBarStyle}" x:FieldModifier="public" />
                </Border>

                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Image Name="HUD_GoldImage" Style="{StaticResource HUD_GoldImageStyle}" />
                    <TextBlock Name="HUD_GoldAmount" Style="{StaticResource HUD_GoldAmountStyle}" Text="0" x:FieldModifier="public" />
                </StackPanel>
            </Grid>
        </Grid>
        
        <Grid Name="HUD_BottomRow" Grid.Row="2">
            <Button Name="HUD_PauseButton" Style="{StaticResource HUD_PauseButtonStyle}" Content="&#xE292;" Click="PauseGame" />
        </Grid>
    </Grid>

    <Border Name="PauseMenu" Style="{StaticResource PauseMenuStyle}" x:FieldModifier="public" Visibility="Collapsed">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Style="{StaticResource PauseMenu_ButtonStyle}" Content="Shop" Click="PauseMenuOption1_Click" />
            <Button Style="{StaticResource PauseMenu_ButtonStyle}" Grid.Row="1" Content="Menu Option 2" />
            <Button Style="{StaticResource PauseMenu_ButtonStyle}" Grid.Row="2" Content="Menu Option 2" />
            <Button Style="{StaticResource PauseMenu_ButtonStyle}" Grid.Row="3" Content="Menu Option 2" />
        </Grid>
    </Border>

    <Grid Name="LevelEnd" x:FieldModifier="public" Visibility="Collapsed">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Name="LevelEnd_LevelCompleteText" x:FieldModifier="public" FontSize="48" Foreground="Black" TextAlignment="Center" />
        <Button Name="LevelEnd_OK" Content="OK" Grid.Row="1" BorderBrush="Blue" Background="Black" HorizontalAlignment="Right"
                VerticalAlignment="Bottom" Margin="0,0,40,40" FontSize="48" Click="ShowShop" />
    </Grid>
    
    <Grid Name="Shop" x:FieldModifier="public" Visibility="Collapsed">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Top Row -->
        <Border Style="{StaticResource Shop_ShopSectionStyle}">
            <TextBlock Name="Shop_ShopText" Style="{StaticResource Shop_ShopTitleStyle}" Text="- Shop -" />
        </Border>
        
        <!-- Middle Row -->
        <Border Style="{StaticResource Shop_ShopSectionStyle}" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Upgrades -->
                    <TextBlock Style="{StaticResource Shop_ShopSubtitleStyle}" Text="Upgrades"/>

                    <!-- Upgrades Items -->
                    <GridView Name="Shop_UpgradesList" Style="{StaticResource Shop_ShopItemsListStyle}" x:FieldModifier="public" />
                </Grid>

                <!-- Right Side -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Prepair/Repair -->
                    <TextBlock Style="{StaticResource Shop_ShopSubtitleStyle}" Text="Prepare/Repair"/>

                    <!-- Prepare/Repair Items -->
                    <GridView Name="Shop_PrepareRepairList" Style="{StaticResource Shop_ShopItemsListStyle}" x:FieldModifier="public" />
                </Grid>
            </Grid>
        </Border>

        <!-- Bottom Row -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Items Text -->
            <TextBlock Style="{StaticResource Shop_ShopSubtitleStyle}" Text="Items"/>
            
            <!-- Items -->
            <GridView Name="Shop_ItemsList" Style="{StaticResource Shop_ShopItemsListStyle}" x:FieldModifier="public">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
            </GridView>

            <!-- Save + Done Buttons -->
            <Button Name="Shop_Save" Content="Save" Grid.Row="2" BorderBrush="Blue" Background="Black" HorizontalAlignment="Left"
                    VerticalAlignment="Bottom" Margin="20,0,0,20" FontSize="48" Click="SaveGame" />
            
            <Button Name="Shop_Done" Content="Done" Grid.Row="2" BorderBrush="Blue" Background="Black" HorizontalAlignment="Right"
                VerticalAlignment="Bottom" Margin="0,0,20,20" FontSize="48" Click="StartNextLevel" />
        </Grid>
    </Grid>
</SwapChainBackgroundPanel>